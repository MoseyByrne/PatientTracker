@{
  Layout = "_Layout";
}

@model PatientTracker.Models.Doctor

<h2>Add a Patient</h2>

<h4>Add a patient to this doctor: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.DoctorId)

    @Html.Label("Add patient")
    @Html.DropDownList("PatientId")

    <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to list", "Index")</p>
<p>@Html.ActionLink("Add a Patient", "AddPatient", new { id = Model.DoctorId })</p>